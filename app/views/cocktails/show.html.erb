<h1>Cocktail</h1>
<p><%= @cocktail.name %></p>

<%= link_to 'Back', cocktails_path %>




<h3>Dose</h3>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> <%= dose.ingredient.name%>-<%= link_to 'Delete', dose_path(dose), method: :delete, data: {confirm: 'Are you sure?'} %></li>
  <% end %>
</ul>

<%= cl_image_tag(@cocktail.photo.key, height: 300, width: 400, crop: :fill) if @cocktail.photo.attached? %>
<% unless @cocktail.photo.attached? %>
  <p>No photo attached</p>
<% end %>




<%= link_to 'Add dose', new_cocktail_dose_path(@cocktail) %>
