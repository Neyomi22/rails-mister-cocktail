<h1>Cocktail</h1>
<p><%= @cocktail.name %></p>

<%= link_to 'Back', cocktails_path %>


<h3>Dose</h3>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> <%= dose.ingredient.name%>- <%= link_to 'Delete', dose_path(dose), method: :delete, data: {confirm: 'Are you sure?'} %></li>
  <% end %>
</ul>
<%= link_to 'Add dose', new_cocktail_dose_path(@cocktail) %>
